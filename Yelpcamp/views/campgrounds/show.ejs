<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= camp.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <span class="text-muted">
                            <%= camp.description %>
                        </span>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">$ <%= camp.price %>
                    </li>
                </ul>
                <div class="card-body text-center">
                    <a href="/campgrounds/new" class="card-link btn btn-dark">New</a>
                    <a href="/campgrounds/<%= camp._id %>/edit " class="card-link btn btn-dark">Edit</a>
                    <a href="/campgrounds" class="card-link btn btn-secondary">Back</a>
                </div>
            </div>

            <form action="/campgrounds/<%= camp._id %>?_method=DELETE " method="POST" class="text-center my-3">
                <button class="btn btn-danger">DELETE</button>
            </form>

        </div>
    </div>