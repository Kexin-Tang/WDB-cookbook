<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= camp.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <span class="text-muted">
                            <%= camp.description %>
                        </span>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">$ <%= camp.price %>
                    </li>
                </ul>
                <div class="card-body text-center">
                    <a href="/campgrounds/<%= camp._id %>/edit " class="card-link btn btn-dark">Edit</a>
                    <form style="display: inline-block;" action="/campgrounds/<%= camp._id %>?_method=DELETE "
                        method="POST" class="text-center my-3">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>REVIEWs</h2>
            <form action="/campgrounds/<%= camp._id %>/reviews" class="mb-3 needs-validation" method="POST" novalidate>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10"
                        required></textarea>
                </div>
                <button class="btn btn-dark">Submit Review</button>
            </form>

            <% for( let review of camp.reviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating: <%= review.rating %>
                        </h5>
                        <p class="card-text">
                            <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>