<% layout('layouts/boilerplate') %>
    <h1>Add a new Campground</h1>
    <form action="/campgrounds" method="POST">
        <div style="padding: 10px 10px;">
            <label for="title">Title: </label>
            <input type="text" name="campgrounds[title]" id="title">
        </div>
        <div style="padding: 10px 10px;">
            <label for="location">Location: </label>
            <input type="text" name="campgrounds[location]" id="location">
        </div>
        <button>New</button>
    </form>
    <footer>
        <a href="/campgrounds">&rarr; Back to Mainpage</a>
    </footer>