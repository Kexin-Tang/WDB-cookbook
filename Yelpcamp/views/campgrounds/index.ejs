<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <%for(let camp of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= camp.image %>" class="img-fluid" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id %> " class="btn btn-dark">View</a>
                    </div>
                </div>
            </div>
        </div>

        <%}%>
            <form action="/campgrounds/new">
                <button>Add a new Campground</button>
            </form>